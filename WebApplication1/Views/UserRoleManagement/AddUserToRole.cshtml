@model UserRole

    
@{
    ViewData["Title"] = "Adicionar regra ao usuario";
}

<h3 class="text-center">Controle de Politica de Acesso</h3>
<hr/>

    @await Html.PartialAsync("_TopMenuPartial")


<div class="row">
    <div class="col-6">
        <form asp-action="AddUserToRole" method="post">
            <div class="form-group">
                <label>Selecione o usuário</label>
                <select asp-for="UserId" asp-items="@ViewBag.Users" class="form-control">
                    <option selected disabled>--Selecione o usuário--</option>
                </select>
                <br />
                <input type="submit" value="Create" class="btn btn-outline-primary btn-block"/>
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </div>

            <div class="form-group">
                <label>Selecione a regra</label>
                <select asp-for="RoleName" asp-items="@ViewBag.Roles" class="form-control">
                    <option selected disabled>--Selecione a regra--</option>
                </select>
                <br />
                <input type="submit" value="Assign" class="btn btn-outline-primary btn-block"/>
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>
