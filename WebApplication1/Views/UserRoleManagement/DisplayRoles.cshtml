@model List<Microsoft.AspNetCore.Identity.IdentityRole>

    
@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Controle de Politica de Acesso</h3>
<hr/>

    @await Html.PartialAsync("_TopMenuPartial")


<div class="row">
    <div class="col-6">
        <form asp-action="AddRole" method="post">
            <div class="form-group">
                <label>Digite uma nova política</label>
                <input type="text" id="role" name="role" class="form-control" placeholder="digite aqui" />
                <br />
                <input type="submit" value="Create" class="btn btn-outline-primary btn-block"/>
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </div>
        </form>
    </div>

        <div class="col-6">
            @if (Model.Count == 0)
            {
                <p>No roles</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Politica</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var u in Model)
                        {
                            <tr>
                                <td>@u.Name</td>
                                <td>
                                    <a class="btn btn-success"
                                    asp-route-role="@u.Name"
                                    asp-action="RemoveRole"
                                    onclick="return confirm('Tem certeza')">Remover regra</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
