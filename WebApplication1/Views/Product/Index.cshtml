<h3>Index</h3>
<a asp-controller="product" asp-action="add">Add</a>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Status</th>
    </tr>    
    @foreach(var product in ViewBag.products)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Status</td>
            <td>
                <a asp-controller="product" asp-action="delete" asp-route-id="@product.Id">Excluir</a>
                <a asp-controller="product" asp-action="edit" asp-route-id="@product.Id">Editar</a>
            </td>
        </tr>
    }
</table>